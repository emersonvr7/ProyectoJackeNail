@model IEnumerable<ProyectoJackeNail.Models.Empleado>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-3xl font-bold underline text-center">Empleados</h1>
<br />
<p>
    <a asp-action="Create" class="text-white bg-blue-700 hover:bg-blue-800 focus:outline-none focus:ring-4 focus:ring-blue-300 font-medium rounded-full text-sm px-5 py-2.5 text-center me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"><i class='bx bx-user-plus bx-sm'></i> Create New</a>
</p>
<br />

<div class="relative overflow-x-auto shadow-md sm:rounded-lg">
    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400 table">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3">Nombre</th>
                <th scope="col" class="px-6 py-3">Correo</th>
                <th scope="col" class="px-6 py-3">Teléfono</th>
                <th scope="col" class="px-6 py-3">Documento</th>
                <th scope="col" class="px-6 py-3">Rol</th>
                <th scope="col" class="px-6 py-3">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                    <td class="px-6 py-4">@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td class="px-6 py-4">@Html.DisplayFor(modelItem => item.Correo)</td>
                    <td class="px-6 py-4">@Html.DisplayFor(modelItem => item.Telefono)</td>
                    <td class="px-6 py-4">@Html.DisplayFor(modelItem => item.Documento)</td>
                    <td class="px-6 py-4">@Html.DisplayFor(modelItem => item.Rol.IdRol)</td>
                    <td class="px-6 py-4">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="text-blue-600 hover:text-blue-900">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="text-green-600 hover:text-green-900">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="text-red-600 hover:text-red-900">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="~/js/mi-script.js"></script>
}
