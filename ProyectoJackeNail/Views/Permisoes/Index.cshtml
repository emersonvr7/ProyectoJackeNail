@model IEnumerable<ProyectoJackeNail.Models.Permiso>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-3xl font-bold underline text-center">Permisos</h1>

<p class="text-right">
    <a asp-action="Create" class="text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center mr-2 mb-2">
        <i class='bx bx-list-plus bx-sm'></i>
    </a>
</p>

<div class="overflow-x-auto relative shadow-md sm:rounded-lg">
    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="py-3 px-6">
                    Nombre Permiso
                </th>
                <th scope="col" class="py-3 px-6">
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                    <td class="py-4 px-6">
                        @Html.DisplayFor(modelItem => item.NombrePermiso)
                    </td>
                    <td class="py-4 px-6">
                        <a asp-action="Edit" asp-route-id="@item.IdPermiso" class="btn btn-sm btn-primary"><i class="bx bx-edit bx-sm"></i> </a>

                        <a asp-action="Delete" asp-route-id="@item.IdPermiso" class="btn btn-sm btn-danger"><i class="bx bx-trash-alt bx-sm"></i> </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
