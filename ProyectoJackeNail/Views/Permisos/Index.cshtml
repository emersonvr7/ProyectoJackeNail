@model IEnumerable<ProyectoJackeNail.Models.Permiso>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-3xl font-bold underline text-center">Permisos</h1>

<p class="text-right">
    <a asp-action="Create" class="text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center mr-2 mb-2">
        <i class='bx bx-list-plus bx-sm'></i>
    </a>
</p>

<div class="overflow-x-auto relative shadow-md sm:rounded-lg">
    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="py-3 px-6">
                    Nombre Permiso
                </th>
                <th scope="col" class="py-3 px-6">
                    Acciones
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var permiso in Model)
            {
                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                    <td class="py-4 px-6">
                        @Html.DisplayFor(modelItem => permiso.NombrePermiso)
                    </td>
                    <td class="py-4 px-6">
                        <a asp-action="Edit" asp-route-id="@permiso.IdPermiso" class="focus:outline-none text-white bg-yellow-400 hover:bg-yellow-500 focus:ring-4 focus:ring-yellow-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:focus:ring-yellow-900"><i class='bx bx-edit bx-sm'></i></a>
                        @*                         <a asp-action="Detalles" asp-route-id="@permiso.IdPermiso" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">Detalles</a> |
                    *@                        <a asp-action="Eliminar" asp-route-id="@permiso.IdPermiso" class="focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900"><i class='bx bx-trash bx-sm'></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
